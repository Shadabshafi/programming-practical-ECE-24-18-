#include <stdio.h>

int main() {
    int n;

    // Input the size of the array
    printf("Enter the number of elements in the array: ");
    scanf("%d", &n);

    int arr[n]; // Declare an array of size n
    int *ptr = arr; // Pointer to the array

    // Input elements into the array
    printf("Enter %d elements:\n", n);
    for (int i = 0; i < n; i++) {
        scanf("%d", (ptr + i)); // Store values in the array using pointer arithmetic
    }

    // Display the elements of the array using pointers
    printf("\nArray elements are:\n");
    for (int i = 0; i < n; i++) {
        printf("Element %d: %d\n", i + 1, *(ptr + i)); // Access values using pointer arithmetic
    }

    return 0;
}
