#include <stdio.h>
#include <ctype.h>
#include <string.h>

int main() {
    FILE *file;
    char filename[100], ch;
    int chars = 0, words = 0, sentences = 0;
    int vowels = 0, consonants = 0, punctuations = 0;
    int inWord = 0;  // Flag to track whether we are inside a word

    // Ask for the filename
    printf("Enter the name of the file: ");
    scanf("%s", filename);

    // Open the file in read mode
    file = fopen(filename, "r");

    // Check if the file was opened successfully
    if (file == NULL) {
        printf("Error: Could not open file %s\n", filename);
        return 1;
    }

    // Read the file character by character
    while ((ch = fgetc(file)) != EOF) {
        chars++;  // Count the number of characters

        // Count vowels and consonants
        if (isalpha(ch)) {
            if (ch == 'a' || ch == 'A' || ch == 'e' || ch == 'E' || ch == 'i' || ch == 'I' ||
                ch == 'o' || ch == 'O' || ch == 'u' || ch == 'U') {
                vowels++;
            } else {
                consonants++;
            }
        }

        // Count punctuation marks
        if (ispunct(ch)) {
            punctuations++;
        }

        // Count words: a word is defined as a sequence of letters/digits surrounded by spaces or punctuation
        if (isspace(ch) || ispunct(ch)) {
            if (inWord) {
                words++;  // End of a word
                inWord = 0;
            }
        } else {
            inWord = 1;  // Start of a word
        }

        // Count sentences: end of a sentence is marked by a period, exclamation mark, or question mark
        if (ch == '.' || ch == '!' || ch == '?') {
            sentences++;
        }
    }

    // If the last word did not end with space or punctuation, we still need to count it
    if (inWord) {
        words++;
    }

    // Close the file
    fclose(file);

    // Output the results
    printf("\nFile statistics:\n");
    printf("Total characters: %d\n", chars);
    printf("Total words: %d\n", words);
    printf("Total sentences: %d\n", sentences);
    printf("Total vowels: %d\n", vowels);
    printf("Total consonants: %d\n", consonants);
    printf("Total punctuation marks: %d\n", punctuations);

    return 0;
}
