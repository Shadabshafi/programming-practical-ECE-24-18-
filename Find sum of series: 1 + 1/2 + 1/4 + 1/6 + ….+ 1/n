#include <stdio.h>

int main() {
    int n;
    double sum = 0.0;

    // Input value of n
    printf("Enter the value of n: ");
    scanf("%d", &n);

    // Calculate the sum of the series
    for (int i = 1; i <= n; i++) {
        sum += 1.0 / (2 * i - 1);  // The formula for the series term
    }

    // Print the sum
    printf("Sum of the series is: %.4f\n", sum);

    return 0;
}
