#include <stdio.h>

int main() {
    int n;
    double sum = 0.0;

    // Taking input for the value of n
    printf("Enter the value of n: ");
    scanf("%d", &n);

    // Calculate the sum of the series
    for (int i = 1; i <= n; i++) {
        if (i % 2 == 0) {  // Only consider even terms (i.e., 2, 4, 6, ...)
            sum += 1.0 / i;
        }
    }

    // Output the sum
    printf("Sum of the series: %.6f\n
