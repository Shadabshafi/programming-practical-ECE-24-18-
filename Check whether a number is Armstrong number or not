#include <stdio.h>
#include <math.h>

int main() {
    int number, sum = 0, temp, remainder, digits = 0;

    // Ask the user to input a number
    printf("Enter a number: ");
    scanf("%d", &number);

    temp = number;

    // Find the number of digits in the number
    while (temp != 0) {
        temp /= 10;
        digits++;
    }

    temp = number;

    // Check if the number is an Armstrong number
    while (temp != 0) {
        remainder = temp % 10;  // Get the last digit
        sum += pow(remainder, digits);  // Add the digit raised to the power of the number of digits
        temp /= 10;  // Remove the last digit
    }

    // If sum equals the original number, it's an Armstrong number
    if (sum == number) {
        printf("%d is an Armstrong number.\n", number);
    } else {
        printf("%d is not an Armstrong
