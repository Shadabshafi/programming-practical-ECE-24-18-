#include <stdio.h>

int main() {
    int number, digit;

    // Ask the user to input a natural number
    printf("Enter a natural number: ");
    scanf("%d", &number);

    // Check if the number is a valid natural number
    if (number < 0) {
        printf("Please enter a positive number.\n");
        return 1;
    }

