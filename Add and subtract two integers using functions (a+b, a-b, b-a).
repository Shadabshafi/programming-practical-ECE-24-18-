#include <stdio.h>

// Function to add two integers
int add(int a, int b) {
    return a + b;
}

// Function to subtract two integers (a - b)
int subtract_a_b(int a, int b) {
    return a - b;
}

// Function to subtract two integers (b - a)
int subtract_b_a(int a, int b) {
    return b - a;
}

int main() {
    int a, b;
    
    // Input two integers
    printf("Enter two integers: ");
    scanf("%d %d", &a, &b);

    // Perform and display the operations
    printf("a + b = %d\n", add(a, b));
    printf("a - b = %d\n", subtract_a_b(a, b));
    printf("b - a = %d\n", subtract_b_a(a, b));

    return 0;
}
