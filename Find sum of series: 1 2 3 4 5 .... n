#include <stdio.h>

int main() {
    int n, sum = 0;

    // Input the value of n
    printf("Enter a number (n): ");
    scanf("%d", &n);

    // Using a for loop to calculate the sum
    for (int i = 1; i <= n; i++) {
        sum += i;
    }

    // Display the sum
    printf("Sum of the series: %d\n", sum);
    
    return 0;
}
