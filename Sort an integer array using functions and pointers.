#include <stdio.h>

// Function to sort the array using pointers
void sortArray(int *arr, int n) {
    int *i, *j, temp;

    // Bubble sort using pointers
    for (i = arr; i < arr + n - 1; i++) {
        for (j = i + 1; j < arr + n; j++) {
            if (*i > *j) {
                // Swap the values
                temp = *i;
                *i = *j;
                *j = temp;
            }
        }
    }
}

// Function to display the array
void displayArray(int *arr, int n) {
    for (int *ptr = arr; ptr < arr + n; ptr++) {
        printf("%d ", *ptr);
    }
    printf("\n");
}

int main() {
    int n;

    printf("Enter the number of elements: ");
    scanf("%d", &n);

    int arr[n];
    printf("Enter %d integers:\n", n);
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    printf("Original array: ");
    displayArray(arr, n);

    // Sort the array
    sortArray(arr, n);

    printf("Sorted array: ");
    displayArray(arr, n);

    return 0;
}
