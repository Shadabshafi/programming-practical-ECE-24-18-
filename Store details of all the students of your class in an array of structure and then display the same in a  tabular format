#include <stdio.h>

// Define the structure for student
struct Student {
    char name[50];
    int roll_no;
    float marks;
};

int main() {
    int n;

    // Input the number of students
    printf("Enter the number of students: ");
    scanf("%d", &n);

    // Declare an array of structures to hold student details
    struct Student students[n];

    // Input student details
    for (int i = 0; i < n; i++) {
        printf("\nEnter details for student %d:\n", i + 1);
        printf("Enter student's name: ");
        getchar(); // To consume the newline character left by previous scanf
        fgets(students[i].name, sizeof(students[i].name), stdin);
        // Remove the newline character left by fgets
        students[i].name[strcspn(students[i].name, "\n")] = '\0';

        printf("Enter student's roll number: ");
        scanf("%d", &students[i].roll_no);

        printf("Enter student's marks: ");
        scanf("%f", &students[i].marks);
    }

    // Display student details in tabular format
    printf("\nStudent Details:\n");
    printf("--------------------------------------------------\n");
    printf("| %-20s | %-12s | %-6s |\n", "Name", "Roll Number", "Marks");
    printf("--------------------------------------------------\n");
    for (int i = 0; i < n; i++) {
        printf("| %-20s | %-12d | %-6.2f |\n", students[i].name, students[i].roll_no, students[i].marks);
    }
    printf("--------------------------------------------------\n");

    return 0;
}
