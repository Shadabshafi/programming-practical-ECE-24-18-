#include <stdio.h>
#include <string.h>

void reverseString(const char *str) {
    const char *ptr = str; // Pointer to the string
    
    // Move the pointer to the end of the string
    while (*ptr != '\0') {
        ptr++;
    }
    ptr--; // Move back to the last character (ignoring '\0')

    // Print the string in reverse order
    while (ptr >= str) {
        putchar(*ptr);
        ptr--;
    }
    putchar('\n');
}

int main() {
    char str[100];

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);
    
    // Remove trailing newline character if present
    size_t len = strlen(str);
    if (str[len - 1] == '\n') {
        str[len - 1] = '\0';
    }

    printf("Reversed string: ");
    reverseString(str);

    return 0;
}
